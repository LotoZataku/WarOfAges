<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bakes.login_menu.Menu">

    <Button
        android:text="New Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:id="@+id/NewGame"
        android:minHeight="60dip"
        android:minWidth="200dip" />

    <Button
        android:text="Spectate Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Spectator"
        android:minHeight="60dip"
        android:minWidth="200dip"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/NewGame"
        android:layout_alignLeft="@+id/NewGame"
        android:layout_alignStart="@+id/NewGame" />

    <Button
        android:text="Editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/Editor"
        android:minHeight="60dip"
        android:minWidth="200dip"
        android:layout_below="@+id/Spectator"
        android:layout_alignLeft="@+id/NewGame"
        android:layout_alignStart="@+id/NewGame" />

    <Button
        android:text="Log Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/Logout"
        android:minHeight="60dip"
        android:minWidth="200dip"
        android:layout_below="@+id/Editor"
        android:layout_alignLeft="@+id/NewGame"
        android:layout_alignStart="@+id/NewGame" />
</RelativeLayout>
